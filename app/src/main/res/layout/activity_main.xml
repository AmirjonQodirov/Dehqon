                                android:id="@+id/btn13"
                                app:icon="@drawable/btn13"
                                app:iconSize="45dp"
                                style="@style/MaterialAlertDialog.MaterialComponents.Title.Icon"
                                app:iconTint="@color/black"
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="7dp"
                                android:layout_marginEnd="7dp"
                                android:layout_marginStart="15dp"
                                android:layout_width="0dp"
                                android:onClick="btn_clicked"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/shape_main_for_buttons"
                                android:text="@string/btn_13_name"
                                app:cornerRadius="10dp"
                                />
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn14"
                                app:icon="@drawable/btn14"
                                app:iconSize="45dp"
                                style="@style/MaterialAlertDialog.MaterialComponents.Title.Icon"

                                app:iconTint="@color/black"
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginStart="7dp"
                                android:layout_marginEnd="15dp"
                                android:layout_width="0dp"
                                android:onClick="btn_clicked"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/shape_main_for_buttons"
                                android:text="@string/btn_14_name"
                                app:cornerRadius="10dp"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="150dp"
                            android:gravity="center"
                            android:weightSum="2"
                            android:orientation="horizontal" >

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn15"
                                app:icon="@drawable/btn15"
                                app:iconSize="45dp"
                                style="@style/MaterialAlertDialog.MaterialComponents.Title.Icon"
                                app:iconTint="@color/black"
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginStart="15dp"
                                android:layout_width="0dp"
                                android:onClick="btn_clicked"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/shape_main_for_buttons"
                                android:text="@string/btn_15_name"
                                />
                        </LinearLayout>
                    </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_nav"
        app:itemBackground="@color/white"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>