                                android:background="@drawable/shape_main_for_buttons"
                                android:text="@string/btn_10_name"
                                app:cornerRadius="10dp"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="150dp"
                            android:gravity="center"
                            android:weightSum="2"
                            android:orientation="horizontal" >

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn11"
                                app:icon="@drawable/btn11"
                                app:iconSize="45dp"
